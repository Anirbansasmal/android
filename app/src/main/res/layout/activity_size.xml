        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="106dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="4dp"
