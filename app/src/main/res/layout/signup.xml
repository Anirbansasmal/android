<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebf6fa"
    tools:context=".EditProfile"
    android:layout_weight="1">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="121dp"
        android:src="@drawable/innerpagelogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="360dp"
        android:layout_height="520dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/edit_note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:id="@+id/userFristname_text_input_layout"
            android:layout_width="360dp"
            android:layout_height="600dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/edit_note"
            android:textColorHint="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily=""
                android:text="Signup"
                android:textColor="#DA1876C0"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/txt_password"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/custom_edit"
                android:ems="10"
                android:hint="password"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#161212"
                android:textColorHint="#161212" />

            <EditText
                android:id="@+id/txt_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="154dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/custom_edit"
                android:hint="Re enter Password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#161212"
                android:textColorHint="#1B1A1A" />


            <EditText
                android:id="@+id/txt_shopname"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                android:layout_marginStart="20dp"

                android:layout_marginTop="218dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/custom_edit"
                android:ems="10"
                android:hint="Shop Name"
                android:padding="10dp"
                android:textColor="#161212"
                android:textColorHint="#161212" />


            <EditText
                android:id="@+id/etUsermob"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="287dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/custom_edit"
                android:ems="10"

                android:hint="Mobile Number"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="#161212"
                android:textColorHint="#161212" />


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="405dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_submit"
                android:text="Submit"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="568dp" />

            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="191dp"
                android:layout_marginTop="403dp"
                android:layout_marginEnd="29dp"
                android:layout_marginBottom="224dp"
                android:background="@drawable/btn_bgn_inc"
                android:text="Change Password"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="215dp"
                tools:layout_editor_absoluteY="568dp" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
